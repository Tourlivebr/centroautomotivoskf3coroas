---
import { Image } from 'astro:assets';
import logocat from '../assets/logocat.png';

const menuItems = [
  { href: "#quem-somos", text: "Quem Somos" },
  { href: "#servicos", text: "Serviços" },
  { href: "#certificacoes", text: "Certificações" },
  { href: "#depoimentos", text: "Depoimentos" },
  { href: "#contato", text: "Fale Conosco" },
];
---

<header class="fixed w-full bg-black/80 backdrop-blur-sm z-50 py-4">
  <div class="container mx-auto px-4 flex justify-between items-center">
    <a href="#" class="flex items-center">
      <Image src={logocat} alt="Centro Automotivo Três Coroas" class="h-16 w-auto" />
    </a>
    
    <nav class="hidden md:block">
      <ul class="flex space-x-6">
        {menuItems.map((item) => (
          <li>
            <a
              href={item.href}
              class="text-white hover:text-blue-400 transition-colors duration-300"
            >
              {item.text}
            </a>
          </li>
        ))}
      </ul>
    </nav>

    <!-- Menu Mobile -->
    <button
      id="mobile-menu-button"
      class="md:hidden text-white hover:text-blue-400"
      aria-label="Menu"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-6 w-6"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"
        />
      </svg>
    </button>
  </div>

  <!-- Menu Mobile Dropdown -->
  <div
    id="mobile-menu"
    class="hidden md:hidden bg-black/80 backdrop-blur-sm absolute w-full left-0 py-4 px-4 shadow-lg"
  >
    <ul class="space-y-4">
      {menuItems.map((item) => (
        <li>
          <a
            href={item.href}
            class="block text-white hover:text-blue-400 transition-colors duration-300"
          >
            {item.text}
          </a>
        </li>
      ))}
    </ul>
  </div>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Fechar menu ao clicar em um link
  const mobileLinks = mobileMenu?.querySelectorAll('a');
  mobileLinks?.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });
</script>