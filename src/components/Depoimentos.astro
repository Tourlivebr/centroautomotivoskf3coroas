---
const depoimentos = [
  {
    nome: "João Silva",
    comentario: "Excelente atendimento e profissionalismo. Resolveram o problema do meu carro rapidamente e com preço justo.",
    nota: 5
  },
  {
    nome: "Maria Santos",
    comentario: "Muito satisfeita com o serviço. Equipe atenciosa e transparente em todas as explicações.",
    nota: 5
  },
  {
    nome: "Pedro Oliveira",
    comentario: "Oficina de confiança, sempre faço as revisões do meu carro aqui. Recomendo!",
    nota: 5
  }
];

interface Props {
  quantidade: number;
}
---

<section id="depoimentos" class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-blue-600 text-center mb-12">O que dizem nossos clientes</h2>
    
    <div class="grid md:grid-cols-3 gap-8">
      {depoimentos.map(depoimento => (
        <div class="bg-gray-50 p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300">
          <div class="flex gap-1">
            {[...Array(5)].map((_, i) => (
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class={`h-5 w-5 ${i < depoimento.nota ? 'text-yellow-400' : 'text-gray-300'}`}
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path
                  d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
                />
              </svg>
            ))}
          </div>
          <p class="text-gray-700 mt-4 mb-6">{depoimento.comentario}</p>
          <p class="text-blue-600 font-semibold">{depoimento.nome}</p>
        </div>
      ))}
    </div>
  </div>
</section>