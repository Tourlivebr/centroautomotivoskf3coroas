---
const servicos = [
  {
    titulo: "Troca de Óleo",
    descricao: "Utilizamos óleos de alta qualidade e filtros originais para garantir o melhor desempenho do seu motor.",
    icone: "oil"
  },
  {
    titulo: "Revisão Completa",
    descricao: "Checagem completa dos sistemas do veículo, garantindo segurança e performance.",
    icone: "check"
  },
  {
    titulo: "Freios",
    descricao: "Manutenção e substituição de componentes do sistema de frenagem com peças de primeira linha.",
    icone: "brake"
  },
  {
    titulo: "Suspensão",
    descricao: "Diagnóstico e reparo do sistema de suspensão para maior conforto e estabilidade.",
    icone: "suspension"
  },
  {
    titulo: "Mecânica Geral",
    descricao: "Serviços completos de mecânica para todos os sistemas do seu veículo.",
    icone: "wrench"
  }
];
---

<section id="servicos" class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-blue-600 text-center mb-12">Nossos Serviços</h2>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {servicos.map(servico => (
        <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg hover:transform hover:scale-105 transition-all duration-300">
          <div class="text-blue-600 mb-4">
            {servico.icone === 'oil' && (
              <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
              </svg>
            )}
            {servico.icone === 'check' && (
              <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            )}
            {servico.icone === 'brake' && (
              <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            )}
            {servico.icone === 'suspension' && (
              <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4" />
              </svg>
            )}
            {servico.icone === 'wrench' && (
              <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            )}
          </div>
          <h3 class="text-xl font-semibold text-gray-800 mb-2">{servico.titulo}</h3>
          <p class="text-gray-600">{servico.descricao}</p>
        </div>
      ))}
    </div>
  </div>
</section>