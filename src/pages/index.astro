---
import Welcome from '../components/Welcome.astro';
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import QuemSomos from '../components/QuemSomos.astro';
import Servicos from '../components/Servicos.astro';
import Certificacoes from '../components/Certificacoes.astro';
import Depoimentos from '../components/Depoimentos.astro';
import Contato from '../components/Contato.astro';
import Footer from '../components/Footer.astro';
import WhatsAppButton from '../components/WhatsAppButton.astro';

// SEO Meta Tags
const title = "Auto Mecânica Três Coroas | Oficina Mecânica em Três Coroas - RS";
const description = "Oficina mecânica especializada em Três Coroas - RS. Serviços de mecânica geral, troca de óleo, freios, suspensão e muito mais. Agende seu horário!";
const keywords = "oficina mecânica, Três Coroas, mecânica automotiva, troca de óleo, freios, suspensão, revisão completa, mecânico Três Coroas";
---

<Layout title={title} description={description} keywords={keywords}>
  <Header />
  <main>
    <QuemSomos />
    <Servicos />
    <Certificacoes />
    <Depoimentos />
    <Contato />
  </main>
  <Footer />
  <WhatsAppButton />
</Layout>